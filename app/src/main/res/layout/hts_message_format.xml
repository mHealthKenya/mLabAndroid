<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="10sp"

        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Client Code:"
                android:textColor="@color/txtcolor"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Client Code"
                android:layout_weight="1"
                android:id="@+id/htsclientcode"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Gender:"
                android:textColor="@color/txtcolor"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Gender"
                android:id="@+id/htsgender"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Age:"
                android:layout_weight="1"
                android:textColor="@color/txtcolor"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Age"
                android:id="@+id/htsage"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Result:"
                android:textColor="@color/txtcolor"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Result"
                android:id="@+id/htsresult"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Submitted On"
                android:layout_weight="1"
                android:textColor="@color/txtcolor"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Submitted On"
                android:layout_weight="1"
                android:id="@+id/htssubmitted"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Released On"
                android:textColor="@color/txtcolor"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Released On"
                android:id="@+id/htsreleased"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>






    </LinearLayout>
</ScrollView>