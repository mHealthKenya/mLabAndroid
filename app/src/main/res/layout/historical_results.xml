<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/histrestoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="GET HISTORICAL RESULTS BY DATE"
            android:layout_weight="1"
            android:layout_marginTop="5sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/histfilter_mflcode"
            android:focusable="true"
            android:inputType="number"
            android:hint="Enter MFL code"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/weeklinear"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/histfilter_frmweek"
                android:focusable="false"
                android:enabled="false"
                android:hint="Select Date From"
                android:layout_height="wrap_content" />



            <EditText
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:hint="Select Date To"
                android:id="@+id/histfilter_toweek"
                android:enabled="false"
                android:focusable="false"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>